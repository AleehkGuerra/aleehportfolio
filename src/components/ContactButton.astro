---
export interface Props {
    title: string,
    imagelink: string,
    link: string,
    buttonColor: string, 
}
const { title, imagelink, link, buttonColor } = Astro.props
---

<button 
    class="text-white focus:ring-4 w-32 focus:outline-none font-medium rounded-lg text-sm px-5 py-2.5 text-center inline-flex items-center me-2 dark:focus:ring-blue-800 space-x-4 transition-colors"
    style={`background-color: ${buttonColor}`}
>
    <img src={imagelink} alt="Logo de contacto" class="w-5 h-5">
    <a href={link} class="hover:underline">{title}</a>
</button>